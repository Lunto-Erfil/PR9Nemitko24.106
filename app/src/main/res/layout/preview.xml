<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B70B3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:scrollY="-60dp"
        android:src="@drawable/logo_film"
        android:translationX="760dp"
        android:translationY="340dp"
        tools:ignore="ContentDescription,VisualLintBounds" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="661dp"
        android:layout_height="wrap_content"
        android:src="@drawable/fnaf_movie_preview"
        android:translationX="110dp"
        android:translationY="-110dp"
        tools:ignore="ContentDescription,VisualLintBounds" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="350dp"
        android:text="@string/canYSurvive"
        android:textSize="32sp"
        android:textStyle="bold"
        android:translationX="40dp"
        android:translationY="-60dp"
        tools:ignore="VisualLintBounds,TextSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/fnaf"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#FFB74D"
        android:textSize="32sp"
        android:textStyle="bold"
        android:translationY="-510dp"
        tools:ignore="TextSizeCheck" />
</LinearLayout>